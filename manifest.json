{
    "manifest_version": 3,
    "name": "Auto Click Mine & Submit",
    "version": "1.0",
    "description": "Tự động click nút 'Mine' và 'Submit' khi xuất hiện.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_title": "Auto Clicker"
    }
  }
  